    skos:topConceptOf colour: ;
    skos:narrower colour:grassgreen .

# Narrower concepts under green
colour:grassgreen a skos:Concept ;
    skos:prefLabel "Parent"@en ;
    skos:inScheme colour: ;
    skos:broader colour:green ;
    skos:narrower colour:mintgreen .

colour:mintgreen a skos:Concept ;
    skos:prefLabel "Father"@en ;
    skos:inScheme colour: ;
    skos:broader colour:grassgreen .
